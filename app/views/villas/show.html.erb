
<article>

		<h2><%= @villa.name %> - Ref.:<%= @villa.reference %></h2>
		<p><%= image_tag(@villa.image_file) %></p>
		<p>Sleeps <%= @villa.sleeps %></p>
		
		<p><%= @villa.address %></p>
		
		<h4><%= @villa.strapline %></h4>
		<p><%= @villa.description %></p>
		
		<% content_for(:side) do %>
		
		<p>Features:</p>
		<ul>
			<% @features.each do |f| %>
		
			<li><%= f.name %></li>
			
			<% end %>
	    </ul>
		
		
		<p>In <%= pluralize @collections.size, 'collection' %></p>
		<ol>
			<% @collections.each do |c| %>
		
			<li><%= link_to c.name, c %></li>
			
			<% end %>
	    </ol>
		<% arr = cookies[:wishlist] %>
		
		<p><%= arr.each { |a| print a -= 10, " " } %></p>
		<% end %>
		
		<p><%= link_to 'Add to Wishlist', new_villa_wishlist_path(@villa) %><p>
		
	
</article>

<%= link_to "Back to List of Villas", villas_url  %> | <%= link_to "Edit", edit_villa_path(@villa) %> | <%= link_to "Delete", villa_path(@villa), method: :delete, data: { confirm: 'Are you sure?'}  %> | 
