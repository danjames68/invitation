<%= form_for(@collection) do |f| %>

<%= render "shared/errors", object: @collection %>

<p> <%= f.label :name %>: <%= f.text_field :name %></p>
<p> <%= f.label :image_file %>: <%= f.text_field :image_file %></p>
<p> <%= f.label :description %>: <%= f.text_area( :description, cols: 30, rows:5 ) %></p>

<p><%= f.submit %></p>
<% end %>