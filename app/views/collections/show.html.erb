<h1><%= @collection.name %></h1>

<article>
	<p><%= @collection.description %></p>
	<p><%= image_tag @collection.image_file %></p>
	
	<ul>
		<% @collection.selected_villas.each do |villa| %>
	  <li><%= link_to villa.name, villa %></li>
	  <% end %>
	</ul>
</article>
<footer>
	<%= link_to 'Edit', edit_collection_path(@collection) %>
</footer>